# Production Environment Variables
# Copy this to .env in production (Render/Railway)

# Database URL (will be provided by Render PostgreSQL)
DATABASE_URL="postgresql://user:password@host:port/database"

# Node Environment
NODE_ENV=production

# Server Configuration
PORT=3000

# Microsoft Graph (if using Outlook sync)
AZURE_CLIENT_ID=your_client_id
AZURE_CLIENT_SECRET=your_client_secret
AZURE_TENANT_ID=your_tenant_id

# CORS Origins (your frontend URLs)
CORS_ORIGINS=https://your-frontend.web.app,capacitor://localhost,https://localhost
